@using SimpleOrder.Models.NewFolder
@model OrderEditViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <legend>Order</legend>

    <div class="mb-3">
        @Html.LabelFor(model => model.SenderCity, htmlAttributes: new { @class = "form-label" })
        @Html.TextBoxFor(model => model.SenderCity, htmlAttributes: new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.SenderCity)
    </div>
    <div class="mb-3">
        @Html.LabelFor(model => model.SenderAddress, htmlAttributes: new { @class = "form-label" })
        @Html.TextBoxFor(model => model.SenderAddress, htmlAttributes: new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.SenderAddress)
    </div>
    <div class="mb-3">
        @Html.LabelFor(model => model.RecipientCity, htmlAttributes: new { @class = "form-label" })
        @Html.TextBoxFor(model => model.RecipientCity, htmlAttributes: new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.RecipientCity)
    </div>
    <div class="mb-3">
        @Html.LabelFor(model => model.RecipientAddress, htmlAttributes: new { @class = "form-label" })
        @Html.TextBoxFor(model => model.RecipientAddress, htmlAttributes: new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.RecipientAddress)
    </div>
    <div class="mb-3">
        @Html.LabelFor(model => model.Weight)
        @Html.EditorFor(model => model.Weight, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Weight)
    </div>
    <div class="mb-3">
        @Html.LabelFor(model => model.ShipmentDate)
        @Html.EditorFor(model => model.ShipmentDate, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.ShipmentDate)
    </div>

    <p>
        <button type="submit" class="btn btn-primary">
            Save changes
        </button> | @Html.ActionLink("Back to List", "Index")
    </p>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
